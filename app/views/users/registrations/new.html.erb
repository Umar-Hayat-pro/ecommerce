<div class="min-h-screen flex items-center justify-center mt-10 sm:mt-12">
  <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md mt-10 sm:mt-6">
    <h2 class="text-3xl font-extrabold text-center text-gray-700 mb-6">Create Your Account</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <!-- Email Field -->
      <div>
        <%= f.label :email, class: "block text-gray-700 font-semibold mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full border-2 border-indigo-300 rounded-lg p-3 focus:ring focus:ring-indigo-200 focus:outline-none" %>
      </div>

      <!-- Password Field -->
      <div>
        <%= f.label :password, class: "block text-gray-700 font-semibold mb-2" %>
        <% if @minimum_password_length %>
          <em class="text-sm text-gray-500">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full border-2 border-indigo-300 rounded-lg p-3 focus:ring focus:ring-indigo-200 focus:outline-none" %>
      </div>

      <!-- Password Confirmation Field -->
      <div>
        <%= f.label :password_confirmation, class: "block text-gray-700 font-semibold mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full border-2 border-indigo-300 rounded-lg p-3 focus:ring focus:ring-indigo-200 focus:outline-none" %>
      </div>

      <!-- Submit Button -->
      <div class="text-center mt-6">
        <%= f.submit "Join Now", class: "w-full bg-gradient-to-r from-indigo-500 to-pink-500 text-white py-2 px-4 rounded-lg hover:bg-gradient-to-l focus:outline-none focus:ring focus:ring-indigo-300" %>
      </div>
    <% end %>

    <div class="mt-4 text-center">
      <%= render "users/shared/links" %>
    </div>

    <!-- Fun Fact Element -->
    <div class="mt-8 text-center">
      <p class="text-sm text-gray-500 italic">Did you know? The first computer virus was created in 1986, and it was called Brain!</p>
    </div>
  </div>
</div>
