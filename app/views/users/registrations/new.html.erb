<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="bg-white p-10 rounded-lg shadow-lg w-full max-w-4xl">
    <h2 class="text-3xl font-extrabold text-center text-gray-700 mb-8">Create Your Account</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
      <!-- Two-column Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- First Name -->
        <div>
          <%= f.label :first_name, class: "block text-gray-700 font-semibold mb-2" %>
          <%= f.text_field :first_name, autofocus: true, class: "w-full border-2 border-indigo-300 rounded-lg p-3 focus:ring focus:ring-indigo-200 focus:outline-none" %>
        </div>
        <!-- Last Name -->
        <div>
          <%= f.label :last_name, class: "block text-gray-700 font-semibold mb-2" %>
          <%= f.text_field :last_name, class: "w-full border-2 border-indigo-300 rounded-lg p-3 focus:ring focus:ring-indigo-200 focus:outline-none" %>
        </div>
        <!-- Email -->
        <div>
          <%= f.label :email, class: "block text-gray-700 font-semibold mb-2" %>
          <%= f.email_field :email, autocomplete: "email", class: "w-full border-2 border-indigo-300 rounded-lg p-3 focus:ring focus:ring-indigo-200 focus:outline-none" %>
        </div>
        <!-- Phone Number -->
        <div>
          <%= f.label :phone_number, class: "block text-gray-700 font-semibold mb-2" %>
          <%= f.telephone_field :phone_number, class: "w-full border-2 border-indigo-300 rounded-lg p-3 focus:ring focus:ring-indigo-200 focus:outline-none" %>
        </div>
        <!-- Address -->
        <div>
          <%= f.label :address, class: "block text-gray-700 font-semibold mb-2" %>
          <%= f.text_field :address, class: "w-full border-2 border-indigo-300 rounded-lg p-3 focus:ring focus:ring-indigo-200 focus:outline-none" %>
        </div>
        <!-- City -->
        <div>
          <%= f.label :city, class: "block text-gray-700 font-semibold mb-2" %>
          <%= f.text_field :city, class: "w-full border-2 border-indigo-300 rounded-lg p-3 focus:ring focus:ring-indigo-200 focus:outline-none" %>
        </div>
        <!-- Country -->
        <div>
          <%= f.label :country, class: "block text-gray-700 font-semibold mb-2" %>
          <%= f.text_field :country, class: "w-full border-2 border-indigo-300 rounded-lg p-3 focus:ring focus:ring-indigo-200 focus:outline-none" %>
        </div>
        <!-- Password -->
        <div>
          <%= f.label :password, class: "block text-gray-700 font-semibold mb-2" %>
          <% if @minimum_password_length %>
            <em class="text-sm text-gray-500">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "w-full border-2 border-indigo-300 rounded-lg p-3 focus:ring focus:ring-indigo-200 focus:outline-none" %>
        </div>
        <!-- Password Confirmation -->
        <div>
          <%= f.label :password_confirmation, class: "block text-gray-700 font-semibold mb-2" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full border-2 border-indigo-300 rounded-lg p-3 focus:ring focus:ring-indigo-200 focus:outline-none" %>
        </div>
      </div>
      <!-- Submit Button -->
      <div class="text-center mt-8">
        <%= f.submit "Create Account", class: "w-full bg-gradient-to-r from-indigo-500 to-pink-500 text-white py-3 px-6 rounded-lg hover:bg-gradient-to-l focus:outline-none focus:ring focus:ring-indigo-300" %>
      </div>
    <% end %>
    <!-- Back Link -->
    <div class="mt-6 text-center">
      <%= link_to "Back to Login", new_session_path(resource_name), class: "text-indigo-500 hover:underline" %>
    </div>
  </div>
</div>
