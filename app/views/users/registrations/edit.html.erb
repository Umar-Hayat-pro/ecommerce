<div class="bg-gray-50 min-h-screen py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-white shadow-lg rounded-lg p-8">
      <h2 class="text-2xl font-extrabold text-gray-900 mb-6">Edit <%= resource_name.to_s.humanize %></h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>
        <!-- Two-Column Form Layout -->
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
          <!-- Email -->
          <div>
            <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
            <%= f.email_field :email, class: "mt-1 block w-full rounded-md shadow-sm border-gray-300 focus:ring-indigo-500 focus:border-indigo-500", autofocus: true, autocomplete: "email" %>
          </div>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div class="sm:col-span-2">
              <p class="text-sm text-gray-600">Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            </div>
          <% end %>
          <!-- Password -->
          <div>
            <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
            <span class="text-sm text-gray-500">(leave blank if you don't want to change it)</span>
            <%= f.password_field :password, class: "mt-1 block w-full rounded-md shadow-sm border-gray-300 focus:ring-indigo-500 focus:border-indigo-500", autocomplete: "new-password" %>
            <% if @minimum_password_length %>
              <p class="mt-1 text-sm text-gray-500"><%= @minimum_password_length %> characters minimum</p>
            <% end %>
          </div>
          <!-- First Name -->
          <div>
            <%= f.label :first_name, class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :first_name, class: "mt-1 block w-full rounded-md shadow-sm border-gray-300 focus:ring-indigo-500 focus:border-indigo-500" %>
          </div>
          <!-- Last Name -->
          <div>
            <%= f.label :last_name, class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :last_name, class: "mt-1 block w-full rounded-md shadow-sm border-gray-300 focus:ring-indigo-500 focus:border-indigo-500" %>
          </div>
          <!-- Phone Number -->
          <div>
            <%= f.label :phone_number, class: "block text-sm font-medium text-gray-700" %>
            <%= f.number_field :phone_number, class: "mt-1 block w-full rounded-md shadow-sm border-gray-300 focus:ring-indigo-500 focus:border-indigo-500" %>
          </div>
          <!-- Address -->
          <div class="sm:col-span-2">
            <%= f.label :address, class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :address, class: "mt-1 block w-full rounded-md shadow-sm border-gray-300 focus:ring-indigo-500 focus:border-indigo-500" %>
          </div>
          <!-- City -->
          <div>
            <%= f.label :city, class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :city, class: "mt-1 block w-full rounded-md shadow-sm border-gray-300 focus:ring-indigo-500 focus:border-indigo-500" %>
          </div>
          <!-- Country -->
          <div>
            <%= f.label :country, class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :country, class: "mt-1 block w-full rounded-md shadow-sm border-gray-300 focus:ring-indigo-500 focus:border-indigo-500" %>
          </div>
          <!-- Password Confirmation -->
          <div>
            <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
            <%= f.password_field :password_confirmation, class: "mt-1 block w-full rounded-md shadow-sm border-gray-300 focus:ring-indigo-500 focus:border-indigo-500", autocomplete: "new-password" %>
          </div>
          <!-- Current Password -->
          <div class="sm:col-span-2">
            <%= f.label :current_password, class: "block text-sm font-medium text-gray-700" %>
            <span class="text-sm text-gray-500">(we need your current password to confirm your changes)</span>
            <%= f.password_field :current_password, class: "mt-1 block w-full rounded-md shadow-sm border-gray-300 focus:ring-indigo-500 focus:border-indigo-500", autocomplete: "current-password" %>
          </div>
        </div>
        <!-- Submit Button -->
        <div class="mt-8">
          <%= f.submit "Update", class: "inline-block bg-indigo-600 text-white font-bold px-6 py-3 rounded-lg shadow hover:bg-indigo-700" %>
        </div>
      <% end %>
      <!-- Cancel Account -->
      <div class="mt-12 border-t pt-6">
        <h3 class="text-lg font-semibold text-red-600">Cancel My Account</h3>
        <p class="text-gray-600">Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "text-red-600 hover:text-red-800" %></p>
      </div>
      <!-- Back Button -->
      <div class="mt-6">
        <%= link_to "Back", :back, class: "text-indigo-600 hover:text-indigo-800 font-medium" %>
      </div>
    </div>
  </div>
</div>
