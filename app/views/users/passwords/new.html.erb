<div class="min-h-screen bg-gray-100 flex items-center justify-center py-8 sm:py-12">
  <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md">
    <h2 class="text-2xl font-bold text-gray-700 text-center mb-6">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-4" }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :email, class: "block text-gray-700 font-medium mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full border border-gray-300 rounded-lg p-3 focus:ring focus:ring-gray-200 focus:outline-none" %>
      </div>

      <div class="text-center mt-6">
        <%= f.submit "Send me reset password instructions", class: "w-full bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600 focus:outline-none focus:ring focus:ring-blue-200" %>
      </div>
    <% end %>

    <div class="mt-4 text-center">
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
