<nav class="fixed w-full top-0 bg-gray-100 z-10 py-4 shadow-md">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="relative flex items-center justify-between h-16">
      <!-- Left Section: Logo -->
      <div class="flex-shrink-0 flex items-center">
        <%= link_to root_path do %>
          <%= image_tag 'logo.png', class: 'block lg:hidden h-12 w-auto' %>
        <% end %>
        <%= link_to root_path do %>
          <%= image_tag 'logo.png', class: 'hidden lg:block h-12 w-auto' %>
        <% end %>
      </div>

      <!-- Center Section: Shop Link -->
      <div class="hidden sm:flex flex-1 items-center justify-center">
        <div class="flex space-x-10">
          <%= link_to 'Shop', root_path, class: "text-gray-500 hover:underline py-2 rounded-md text-md font-medium" %>
        </div>
      </div>

      <!-- Right Section: Icons -->
      <div class="hidden sm:flex items-center space-x-6">
        <% if user_signed_in? %>
          <!-- Sign Out Link -->
          <%= button_to destroy_user_session_path, method: :delete, class: "text-gray-500 hover:underline py-2 rounded-md text-md font-medium" do %>
            <%= icon 'fa-solid', 'sign-out-alt' %>
          <% end %>
        <% else %>
          <!-- Sign Up Link -->
          <%= link_to new_user_registration_path, class: "text-gray-500 hover:underline py-2 rounded-md text-md font-medium" do %>
            <%= icon 'fa-solid', 'user-plus' %>
          <% end %>

          <!-- Sign In Link -->
          <%= link_to new_user_session_path, class: "text-gray-500 hover:underline py-2 rounded-md text-md font-medium" do %>
            <%= icon 'fa-solid', 'sign-in-alt' %>
          <% end %>
        <% end %>

        <!-- Shopping Cart Icon -->
        <%= link_to root_path, class: "text-gray-500 hover:underline py-2 rounded-md text-md font-medium" do %>
          <%= icon 'fa-solid', 'shopping-cart' %>
        <% end %>
      </div>

      <!-- Hamburger Menu Button (visible on small screens) -->
      <div class="sm:hidden flex items-center">
        <button type="button" class="text-gray-500 hover:text-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-300" aria-expanded="false" aria-label="Toggle navigation" id="menu-toggle">
          <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div class="sm:hidden bg-gray-100 border-t border-gray-200 px-4 py-4 hidden" id="mobile-menu">
    <div class="space-y-4">
      <%= link_to 'Shop', root_path, class: "block text-gray-500 hover:underline py-2 rounded-md text-md font-medium" %>
      <% if user_signed_in? %>
        <%= button_to destroy_user_session_path, method: :delete, class: "block text-gray-500 hover:underline py-2 rounded-md text-md font-medium" do %>
          <%= icon 'fa-solid', 'sign-out-alt' %>
        <% end %>
      <% else %>
        <%= link_to new_user_registration_path, class: "block text-gray-500 hover:underline py-2 rounded-md text-md font-medium" do %>
          <%= icon 'fa-solid', 'user-plus' %>
        <% end %>
        <%= link_to new_user_session_path, class: "block text-gray-500 hover:underline py-2 rounded-md text-md font-medium" do %>
          <%= icon 'fa-solid', 'sign-in-alt' %>
        <% end %>
      <% end %>
      <%= link_to root_path, class: "block text-gray-500 hover:underline py-2 rounded-md text-md font-medium" do %>
        <%= icon 'fa-solid', 'shopping-cart' %>
      <% end %>
    </div>
  </div>
</nav>

<script>
  // Toggle mobile menu visibility
  document.getElementById('menu-toggle').addEventListener('click', function () {
    const menu = document.getElementById('mobile-menu');
    menu.classList.toggle('hidden');
  });
</script>
