<div class="bg-gray-50 min-h-screen">
  <!-- Hero Section -->
  <section class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl">
        About Us
      </h1>
      <p class="mt-4 text-lg text-gray-600">
        Learn more about who we are, what we do, and why we’re passionate about it.
      </p>
    </div>
  </section>
  <!-- Mission Section -->
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
      <div>
        <h2 class="text-3xl font-bold text-gray-900">
          Our Mission
        </h2>
        <p class="mt-4 text-lg text-gray-600">
          Our mission is to deliver exceptional value to our customers while making a positive impact on the world. We strive to create meaningful experiences and lasting relationships through our work.
        </p>
      </div>
      <div>
        <%= image_tag 'mission.jpg', alt: "Our Mission", class: "rounded-lg shadow-lg" %>
      </div>
    </div>
  </section>
  <!-- Team Section -->
  <section class="bg-gray-100 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-gray-900">
        Meet Our Team
      </h2>
      <p class="mt-4 text-lg text-gray-600">
        We’re a group of passionate individuals committed to making a difference.
      </p>
      <div class="mt-12 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Team Member -->
        <div class="text-center">
          <%= image_tag "https://placehold.co/400", class: "mx-auto rounded-full w-32 h-32 shadow-lg", alt: "Team Member" %>
          <h3 class="mt-4 text-lg font-medium text-gray-900">
            Jane Doe
          </h3>
          <p class="text-gray-600">
            CEO
          </p>
        </div>
        <!-- Team Member -->
        <div class="text-center">
          <%= image_tag "https://placehold.co/400", class: "mx-auto rounded-full w-32 h-32 shadow-lg", alt: "Team Member" %>
          <h3 class="mt-4 text-lg font-medium text-gray-900">
            John Smith
          </h3>
          <p class="text-gray-600">
            CTO
          </p>
        </div>
        <!-- Team Member -->
        <div class="text-center">
          <%= image_tag "https://placehold.co/400", class: "mx-auto rounded-full w-32 h-32 shadow-lg", alt: "Team Member" %>
          <h3 class="mt-4 text-lg font-medium text-gray-900">
            Emily Chen
          </h3>
          <p class="text-gray-600">
            Marketing Manager
          </p>
        </div>
      </div>
    </div>
  </section>
  <!-- Call-to-Action -->
  <section class="bg-indigo-600 py-16 text-center">
    <h2 class="text-3xl font-bold text-white">
      Ready to work with us?
    </h2>
    <p class="mt-4 text-lg text-indigo-200">
      We’d love to hear from you. Let’s make something great together.
    </p>
    <div class="mt-6">
      <%= link_to 'Contact Us', contact_path, class:"inline-block bg-white text-indigo-600 px-6 p-3 rounded-lg shadow-lg hover:bg-gray-100" %>
    </div>
  </section>
</div>