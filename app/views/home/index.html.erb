<!-- Hero Section -->
<div class="bg-gray-800 text-white text-center py-20">
  <h1 class="text-5xl font-bold mb-4">Welcome to Ecomm</h1>
  <p class="text-xl mb-8">Your one-stop shop for all your e-commerce needs!</p>
  <%= link_to "Contact Us", contact_path, class: "bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-6 rounded shadow-lg transition duration-300" %>
</div>
<!-- Categories Section -->
<div class="flex flex-wrap justify-center mt-12 items-center gap-8 px-4">
  <% @main_categories.each do |category| %>
    <%= link_to category_path(category), class: "flex flex-col items-center bg-white rounded-lg shadow-lg hover:shadow-2xl transition duration-300 p-4" do %>
      <h2 class="text-gray-800 font-medium text-lg text-center mb-4"><%= category.name %></h2>
      <%= category.image.present? ? image_tag(category.image, class: "w-48 h-48 object-cover rounded-lg") : image_tag("http://via.placeholder.com/512", class: "w-48 h-48 object-cover rounded-lg") %>
    <% end %>
  <% end %>
</div>
<!-- Testimonials Section -->
<div class="bg-gray-100 py-20 my-12">
  <div class="container mx-auto px-6">
    <h2 class="text-4xl font-bold text-center text-gray-800 mb-12">Customer Testimonials</h2>
    <div class="flex flex-wrap justify-center gap-6">
      <% [1, 2, 3].each do %>
        <div class="w-full md:w-1/3 px-4">
          <div class="bg-white rounded-lg shadow-md p-6">
            <p class="text-gray-700 text-base mb-4">
              "I've been shopping on Ecomm for years, and it's always been a fantastic experience!"
            </p>
            <p class="text-gray-500 text-sm">
              - Jane Doe
            </p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<!-- Newsletter Section -->
<div class="bg-gray-500 text-white my-12 text-center py-16">
  <h2 class="text-3xl font-bold mb-6">Stay Updated</h2>
  <p class="text-lg mb-8">Subscribe to our newsletter for the latest updates and offers.</p>
  <%= form_with url: root_path, method: :post, local: true, class: "flex justify-center items-center space-x-2 max-w-md mx-auto" do %>
    <%= email_field_tag :email, nil, placeholder: "Enter your email", class: "p-2 rounded-l w-full text-gray-800" %>
    <%= submit_tag "Subscribe", class: "bg-gray-700 hover:bg-gray-800 cursor-pointer text-white font-bold py-2 px-6 rounded-r shadow-lg transition duration-300" %>
  <% end %>
</div>
<%= render 'shared/frontend/footer' %>