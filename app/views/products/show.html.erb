<div class="min-h-screen bg-gray-100 flex flex-col items-center py-10">
  <h1 class="text-3xl font-bold text-gray-800 mb-8">Product Show Page</h1>

  <div class="flex flex-wrap lg:flex-nowrap bg-white shadow-md rounded-lg max-w-5xl p-6 gap-10">
    <!-- Product Images -->
    <div class="flex flex-wrap gap-4 max-w-lg">
      <% @product.images.each do |image| %>
        <%= image_tag image, class: "rounded-lg shadow w-full max-h-72 object-cover" %>
      <% end %>
    </div>

    <!-- Product Details -->
    <div data-controller="products" data-products-product-value="<%= @product.to_json %>" class="flex flex-col max-w-sm">
      <h1 class="text-2xl font-bold text-gray-800 mb-4"><%= @product.name %></h1>
      <p class="text-xl text-green-600 font-semibold mb-4">$<%= (@product.price / 100.0).to_s %></p>
      <p class="text-gray-600 text-base mb-6"><%= @product.description %></p>

      <!-- Sizes -->
      <div class="mb-6">
        <p class="text-sm font-medium text-gray-700 mb-2">Available Sizes</p>
        <div class="flex flex-wrap gap-2">
          <% @product.stocks.each do |stock| %>
            <% if stock.amount > 0 %>
              <button
                data-action="click->products#selectSize"
                value="<%= stock.size %>"
                class="px-4 py-2 bg-blue-500 text-white font-medium rounded shadow hover:bg-blue-600 focus:outline-none"
              >
                <%= stock.size %>
              </button>
            <% else %>
              <button
                disabled
                value="<%= stock.size %>"
                class="px-4 py-2 bg-gray-300 text-gray-600 font-medium rounded cursor-not-allowed"
              >
                <%= stock.size %>
              </button>
            <% end %>
          <% end %>
        </div>
      </div>

      <!-- Add to Cart Button -->
      <button
        data-action="click->products#addToCart"
        class="w-full py-3 bg-indigo-600 text-white font-medium rounded hover:bg-indigo-700 focus:outline-none"
      >
        Add to Cart
      </button>
    </div>
  </div>
</div>
