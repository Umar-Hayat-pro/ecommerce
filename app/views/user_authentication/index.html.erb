<div class="bg-gray-50 min-h-screen py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 grid grid-cols-1 md:grid-cols-3 gap-8">
    <!-- Left Column: Navigation Links -->
    <div class="bg-white shadow-lg rounded-lg p-6">
      <h2 class="text-lg font-bold text-gray-900 mb-4">Navigation</h2>
      <ul class="space-y-4">
        <li>
          <%= link_to "My Profile", profile_path, class: "block text-gray-700 hover:text-indigo-600 font-medium" %>
        </li>
        <li>
          <%= link_to "Edit Profile", edit_user_registration_path, class: "block text-gray-700 hover:text-indigo-600 font-medium" %>
        </li>
        <li>
          <%= link_to "Orders", root_path, class: "block text-gray-700 hover:text-indigo-600 font-medium" %>
        </li>
        <li>
          <%= button_to "Log Out", destroy_user_session_path, method: :delete, 
                      class: "block text-red-600 hover:text-red-800 font-medium" %>
        </li>
      </ul>
    </div>
    <!-- Right Column: User Details -->
    <div class="md:col-span-2">
      <div class="bg-white shadow-lg rounded-lg p-8">
        <h1 class="text-2xl font-extrabold text-gray-900 mb-6">My Profile</h1>
        <!-- User Info Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
          <!-- Email -->
          <div>
            <h2 class="text-sm font-semibold text-gray-500 uppercase">Email</h2>
            <p class="mt-2 text-gray-900"><%= current_user.email %></p>
          </div>
          <!-- First Name -->
          <div>
            <h2 class="text-sm font-semibold text-gray-500 uppercase">First Name</h2>
            <p class="mt-2 text-gray-900">
              <%= current_user.first_name.present? ? current_user.first_name : "N/A" %>
            </p>
          </div>
          <!-- Last Name -->
          <div>
            <h2 class="text-sm font-semibold text-gray-500 uppercase">Last Name</h2>
            <p class="mt-2 text-gray-900">
              <%= current_user.last_name.present? ? current_user.last_name : "N/A" %>
            </p>
          </div>
          <!-- Phone Number -->
          <div>
            <h2 class="text-sm font-semibold text-gray-500 uppercase">Phone Number</h2>
            <p class="mt-2 text-gray-900">
              <%= current_user.phone_number.present? ? current_user.phone_number : "N/A" %>
            </p>
          </div>
          <!-- Country -->
          <div>
            <h2 class="text-sm font-semibold text-gray-500 uppercase">Country</h2>
            <p class="mt-2 text-gray-900">
              <%= current_user.country.present? ? current_user.country : "N/A" %>
            </p>
          </div>
          <!-- City -->
          <div>
            <h2 class="text-sm font-semibold text-gray-500 uppercase">City</h2>
            <p class="mt-2 text-gray-900">
              <%= current_user.city.present? ? current_user.city : "N/A" %>
            </p>
          </div>
          <!-- Address -->
          <div class="sm:col-span-2">
            <h2 class="text-sm font-semibold text-gray-500 uppercase">Address</h2>
            <p class="mt-2 text-gray-900">
              <%= current_user.address.present? ? current_user.address : "N/A" %>
            </p>
          </div>
        </div>
        <!-- Edit Profile Button -->
        <div class="mt-8 text-right">
          <%= link_to "Edit Profile", edit_user_registration_path, 
                      class: "inline-block bg-indigo-600 text-white font-bold px-6 py-3 rounded-lg shadow hover:bg-indigo-700" %>
        </div>
      </div>
    </div>
  </div>
</div>
