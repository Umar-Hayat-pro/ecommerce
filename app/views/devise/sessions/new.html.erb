<div class="min-h-screen bg-gray-100 flex items-center justify-center mt-11 sm:mt-11">
  <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md mt-22 sm:mt-11">
    <h2 class="text-2xl font-bold text-gray-700 text-center mb-6">Welcome Back!</h2>
    <p class="text-gray-500 text-sm text-center mb-6">
      Please enter your details to log in
    </p>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
      <div>
        <%= f.label :email, class: "block text-gray-700 font-medium mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full border border-gray-300 rounded-lg p-3 focus:ring focus:ring-gray-200 focus:outline-none" %>
      </div>

      <div>
        <%= f.label :password, class: "block text-gray-700 font-medium mb-1" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full border border-gray-300 rounded-lg p-3 focus:ring focus:ring-gray-200 focus:outline-none" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "h-4 w-4 text-gray-600 border-gray-300 rounded focus:ring focus:ring-gray-200" %>
          <%= f.label :remember_me, class: "ml-2 text-gray-500 text-sm" %>
        </div>
      <% end %>

      <div class="text-center mt-6">
        <%= f.submit "Log in", class: "w-full bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600 focus:outline-none focus:ring focus:ring-blue-200" %>
      </div>
    <% end %>

    <div class="mt-4 text-center">
      <%= render "devise/shared/links" %>
    </div>

    <div class="mt-8 text-center">
      <p class="text-sm text-gray-500">Fun fact: Did you know the first email was sent in 1971?</p>
    </div>
  </div>
</div>
