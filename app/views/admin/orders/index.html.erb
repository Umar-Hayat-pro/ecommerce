<div class="w-full space-y-8">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 text-green-500 font-medium rounded-lg inline-block" id="notice">
      <%= notice %>
    </p>
  <% end %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-4xl">Orders</h1>
    <%= link_to "New order", new_admin_order_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white font-medium hover:bg-blue-700" %>
  </div>

  <!-- Not Fulfilled Orders -->
  <div class="flex flex-col w-full border border-gray-200 rounded-lg p-4 shadow-sm">
    <h2 class="text-2xl font-semibold mb-4">Not Fulfilled Orders</h2>
    <div class="overflow-x-auto">
      <table class="min-w-full">
        <thead class="bg-gray-100 border-b">
          <tr>
            <th class="text-sm font-medium text-gray-800 px-6 py-4 text-left">ID</th>
            <th class="text-sm font-medium text-gray-800 px-6 py-4 text-left">Customer Email</th>
            <th class="text-sm font-medium text-gray-800 px-6 py-4 text-left">Address</th>
            <th class="text-sm font-medium text-gray-800 px-6 py-4 text-left">Total</th>
          </tr>
        </thead>
        <tbody>
          <% @not_fulfilled_orders.each do |o| %>
            <tr class="bg-white border-b">
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800">
                <%= link_to o.id, [:admin, o], class: "underline" %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800">
                <%= o.customer_email %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800">
                <%= o.address %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800">
                $<%= (o.total / 100.0).to_s %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Fulfilled Orders -->
  <div class="flex flex-col w-full border border-gray-200 rounded-lg p-4 shadow-sm">
    <h2 class="text-2xl font-semibold mb-4">Fulfilled Orders</h2>
    <div class="overflow-x-auto">
      <table class="min-w-full">
        <thead class="bg-gray-100 border-b">
          <tr>
            <th class="text-sm font-medium text-gray-800 px-6 py-4 text-left">ID</th>
            <th class="text-sm font-medium text-gray-800 px-6 py-4 text-left">Customer Email</th>
            <th class="text-sm font-medium text-gray-800 px-6 py-4 text-left">Address</th>
            <th class="text-sm font-medium text-gray-800 px-6 py-4 text-left">Total</th>
          </tr>
        </thead>
        <tbody>
          <% @fulfilled_orders.each do |o| %>
            <tr class="bg-white border-b">
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800">
                <%= link_to o.id, [:admin, o], class: "underline" %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800">
                <%= o.customer_email %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800">
                <%= o.address %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800">
                $<%= (o.total / 100.0).to_s %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
