<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Editing product</h1>

  <%= render "form", admin_product: @admin_product %>

<%= link_to [:admin, @admin_product], class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" do %>
  <i class="fas fa-eye mr-2"></i> Show this product
<% end %>

<%= link_to admin_products_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" do %>
  <i class="fas fa-arrow-left mr-2"></i> Back to products
<% end %>

</div>
