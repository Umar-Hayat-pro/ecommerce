<div class="container mx-auto px-4 py-6">
  <div class="bg-white shadow-md rounded-lg p-6">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <!-- Product Information Section -->
    <div class="flex flex-col space-y-5">
      <div class="flex items-center justify-between">
        <h1 class="text-2xl font-bold text-gray-900">Product Details</h1>
        <%= link_to "Back to Products", admin_products_path, class: "text-sm text-blue-600 hover:text-blue-800" %>
      </div>

      <%= render @admin_product %>

      <!-- Admin Actions (Edit, Delete, Show) -->
      <div class="flex space-x-4 mt-6">
        <%= link_to edit_admin_product_path(@admin_product), class: "flex items-center px-4 py-2 rounded-lg bg-blue-600 text-white hover:bg-blue-700" do %>
          <i class="fas fa-edit mr-2"></i> Edit
        <% end %>

        <%= button_to "Delete this product", admin_product_path(@admin_product), method: :delete, class: "flex items-center px-4 py-2 rounded-lg bg-red-600 text-white hover:bg-red-700" %>
      </div>
    </div>
  </div>
</div>
