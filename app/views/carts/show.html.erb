<div class="min-h-screen bg-gray-100 py-6">
  <div class="max-w-4xl mx-auto bg-white shadow-md rounded-lg p-6">
    <h1 class="text-2xl font-bold mb-4">Cart Page</h1>
    <div id="errorContainer" class="text-red-600 mb-4"></div>
    <div data-controller="cart">
      <div id="cartItems" class="divide-y divide-gray-200">
        <!-- Items will be dynamically inserted here -->
      </div>
      <div class="mt-4 flex justify-between items-center">
        <div id="total" class="text-lg font-medium text-gray-700"></div>
      </div>
      <div class="mt-6 flex gap-4">
        <button class="py-2 px-4 bg-blue-500 hover:bg-blue-600 rounded text-white w-full" data-action="click->cart#checkout">
          Checkout
        </button>
        <button class="py-2 px-4 bg-red-500 hover:bg-red-600 rounded text-white w-full" data-action="click->cart#clear">
          Clear Cart
        </button>
      </div>
    </div>
  </div>
</div>
